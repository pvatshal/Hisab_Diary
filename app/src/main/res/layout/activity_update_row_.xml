<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical"
    android:id="@+id/sc1_up"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E5E5E5"
            android:orientation="vertical"
            android:id="@+id/lay1_up"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical"
                android:id="@+id/lay2_up"
                android:background="#757575"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    >
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:text="Update transaction"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.1"
                        android:id="@+id/tv1_up"/>

                    <Button
                        android:id="@+id/delete_id"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/ic_delete"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/dtv1_up"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FFC107"
                    android:text="  Date"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/dtv2_up"
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_2"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:gravity="start|center"
                    android:inputType="date"
                    android:paddingLeft="10dp"

                    />

                <EditText
                    android:id="@+id/amet_up"
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_2"
                    android:hint="  Amount"
                    android:textColorHint="#FFC107"
                    android:textSize="30dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:gravity="start|center"
                    android:paddingLeft="10dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay3_up"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dtv3_up"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="40dp"
                    android:text=" Type:"
                    android:textColor="#484848"
                    android:textSize="22dp"
                    android:gravity="end"

                    />

                <RadioGroup
                    android:layout_width="309dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:checkedButton="@id/rb2"
                    >

                    <RadioButton
                        android:id="@+id/rb1_up"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="36dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:focusable="true"
                        android:text="Income"
                        android:textSize="22dp" />

                    <RadioButton
                        android:id="@+id/rb2_up"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="36dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:focusable="true"
                        android:elevation="4dp"
                        android:text="Expense"
                        android:textSize="22dp" />

                </RadioGroup>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff"
                android:id="@+id/lay4_up"
                >
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/rectangle_4"
                    >
                    <Spinner
                        android:id="@+id/spn1_up"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"

                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/note_id_up"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:hint="  Note"
                    android:background="@drawable/radio_normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:id="@+id/lay5_up"
                >
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="45dp"
                    android:text=" Payment Method:"
                    android:textSize="23dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#484848"
                    android:gravity="center"

                    />

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/rectangle_4"
                    >
                    <Spinner
                        android:id="@+id/spn3_up"
                        android:layout_width="150dp"

                        android:layout_height="50dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay6_up"
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:background="@color/white"
                android:orientation="vertical">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/imv1_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="27dp"
                    android:backgroundTint="#FFD53C"
                    android:clickable="true"
                    android:elevation="6dp"
                    android:focusable="true"
                    app:borderWidth="0dp"
                    app:srcCompat="@drawable/ic_save" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
