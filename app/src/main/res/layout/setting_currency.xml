<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/sc1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E5E5E5"
                android:orientation="vertical"
                android:id="@+id/lay1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    >
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:text="Change the currency"
                        android:textColor="#020202"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.1"
                        android:id="@+id/tv1"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:background="#ffffff"
                    android:id="@+id/lay4"
                    >
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/rectangle_4"
                        >
                        <Spinner
                            android:id="@+id/spinner_123"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:textColor="#000000"
                            android:scrollbarThumbVertical="@drawable/scrollbar_style"
                            android:verticalScrollbarPosition="left"

                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cu_id_1"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:background="@drawable/radio_normal"
                        />

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#F44336"
                        android:padding="10dp"
                        android:text="You have to reopen the app after changing the currency."
                        />




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/save_id_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginTop="400dp"
                        android:layout_marginRight="27dp"
                        android:backgroundTint="#FFD53C"
                        android:clickable="true"
                        android:elevation="6dp"
                        android:focusable="true"
                        app:borderWidth="0dp"
                        app:srcCompat="@drawable/ic_save" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>