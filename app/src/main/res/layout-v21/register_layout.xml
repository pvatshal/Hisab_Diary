<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/student"
        android:layout_centerHorizontal="true"


        />

    <EditText
        android:id="@+id/et_reg_name"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#11000000"

/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_alignStart="@+id/et_reg_name"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textColor="#FFCCCCCC"
        android:textSize="16sp"
        android:id="@+id/iv_name"
        ></TextView>


    <EditText
        android:id="@+id/et_reg_email"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:background="#11000000"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_alignStart="@+id/et_reg_name"
        android:layout_below="@+id/et_reg_name"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:ems="10"
        android:textColor="#ffffff"

        ></EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_alignStart="@+id/et_reg_name"
        android:layout_below="@+id/et_reg_name"
        android:layout_marginTop="22dp"
        android:text="Email"
        android:textColor="#FFCCCCCC"
        android:textSize="16sp"
        android:id="@+id/iv_email"
        ></TextView>





    <EditText
        android:id="@+id/et_reg_password"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:background="#11000000"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_alignStart="@+id/et_reg_name"
        android:layout_below="@+id/et_reg_email"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:ems="10"
        android:textColor="#ffffff"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_alignStart="@+id/et_reg_name"
        android:layout_below="@+id/et_reg_email"
        android:layout_marginTop="22dp"
        android:text="Password"
        android:textColor="#FFCCCCCC"
        android:textSize="16sp"
        android:id="@+id/iv_password"
        ></TextView>



    <Button
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_reg_password"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_register"
        android:textSize="16sp"
        android:background="#f2aa4f"
        android:textColor="#ffffff"
        android:letterSpacing="0.1"
        ></Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="Already Registered? Login"
        android:textColor="#ffffff"
        ></TextView>





</RelativeLayout>