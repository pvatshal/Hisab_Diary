<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2b3b4e">
            <TextView
                android:layout_width="410dp"
                android:layout_height="70dp"
                android:text=" Settings"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:padding="10dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:orientation="vertical"
         android:background="@drawable/border"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="90dp"
             android:layout_marginTop="10dp"
             android:text="Customize"
             android:textColor="#2b3b4e"
             android:textSize="17dp"
             />
         <LinearLayout
             android:id="@+id/set_lay1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:padding="3dp"
             >

             <ImageView
                 android:layout_width="36dp"
                 android:layout_height="36dp"
                 android:layout_marginStart="20dp"
                 android:layout_marginLeft="16dp"
                 android:layout_gravity="center"
                 app:srcCompat="@drawable/ic_currency_24dp"
                 />


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="20dp"
                     android:text="Currency"
                     android:textSize="20dp"
                     android:textColor="#000000"
                     />
                 <TextView
                     android:id="@+id/cu_id"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:text="$"
                     android:textSize="17dp"
                     android:textColor="#FF4E4242"
                     />
             </LinearLayout>

             <TextView
                 android:id="@+id/id_123"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Change the currency"
                 android:layout_marginLeft="80dp"
                 android:layout_marginTop="20dp"
                 android:textColor="#3F51B5"
                 />
         </LinearLayout>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Help"
            android:layout_marginTop="10dp"
            android:textColor="#2b3b4e"
            android:textSize="17dp"
            />
        <LinearLayout
            android:id="@+id/faqs_layout_id"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_faq_settings"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="FAQ"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="FAQs answerd by our team"
                    android:textSize="16dp"
                    android:textColor="#FF4E4242"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/set_lay3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_query_secondary"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Query and feedback"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="We generally reply within 24 hour"
                    android:textSize="16dp"
                    android:textColor="#4E4242"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="More"
            android:layout_marginTop="10dp"
            android:textColor="#2b3b4e"
            android:textSize="17dp"
            />
        <LinearLayout
            android:id="@+id/app_intro_layout_id"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_app_intro_24dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="App intro"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
                
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/set_lay5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_privacy_policy_24dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Privacy Policy"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
              
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contact_us_id"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mail"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Contact us"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/about_us_id"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_info_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="About app"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
             
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>